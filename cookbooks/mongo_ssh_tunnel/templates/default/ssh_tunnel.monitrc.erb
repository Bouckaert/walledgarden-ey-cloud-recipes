check process <%= @tunnel_name %>
  with pidfile /var/run/<%= @tunnel_name %>.pid
  start program = "/bin/sh -c '/etc/init.d/<%= @tunnel_name %> restart'"
  stop program = "/bin/sh -c '/etc/init.d/<%= @tunnel_name %> stop'"
  <% if @tunnel_direction != 'REV' %>
  if failed host 127.0.0.1 port <%= @connect_port %>
    with timeout 15 seconds then restart
  <% end %>
